<IfModule mod_headers.c>
  # 1. CORS Headers
  Header set Access-Control-Allow-Origin "*"
  Header set Access-Control-Allow-Methods "GET, POST, OPTIONS, HEAD"

  # 2. Security Headers (Best Practices)
  Header set X-Content-Type-Options "nosniff"
  Header set X-XSS-Protection "1; mode=block"
  Header set X-Frame-Options "SAMEORIGIN"
  Header set Referrer-Policy "strict-origin-when-cross-origin"
  Header set Strict-Transport-Security "max-age=63072000; includeSubDomains; preload"
</IfModule>

<IfModule mod_deflate.c>
  # 3. Enable GZIP compression
  AddOutputFilterByType DEFLATE text/html text/plain text/xml text/css text/javascript
  AddOutputFilterByType DEFLATE application/xml application/xhtml+xml application/rss+xml
  AddOutputFilterByType DEFLATE application/javascript application/x-javascript application/json
  AddOutputFilterByType DEFLATE font/woff font/woff2 font/ttf image/svg+xml
</IfModule>

<IfModule mod_expires.c>
  ExpiresActive On

  # 4. Long-term caching for immutable assets (Next.js static, images)
  # 1 year cache
  ExpiresByType image/jpg "access plus 1 year"
  ExpiresByType image/jpeg "access plus 1 year"
  ExpiresByType image/gif "access plus 1 year"
  ExpiresByType image/png "access plus 1 year"
  ExpiresByType image/webp "access plus 1 year"
  ExpiresByType image/avif "access plus 1 year"
  ExpiresByType image/svg+xml "access plus 1 year"
  ExpiresByType font/woff2 "access plus 1 year"
  
  # Next.js specific static files (CSS/JS chunks which have hashes)
  ExpiresByType text/css "access plus 1 year"
  ExpiresByType application/javascript "access plus 1 year"
  ExpiresByType application/x-javascript "access plus 1 year"
</IfModule>

<IfModule mod_headers.c>
  # 5. Cache-Control for Static Assets (Immutable)
  <FilesMatch "\.(jpg|jpeg|png|gif|ico|svg|webp|avif|woff|woff2|ttf|eot|css|js)$">
    Header set Cache-Control "public, max-age=31536000, immutable"
  </FilesMatch>

  <FilesMatch "^_next/static/">
    Header set Cache-Control "public, max-age=31536000, immutable"
  </FilesMatch>
  
  # 6. Cache-Control for HTML pages (Revalidate often)
  <FilesMatch "\.(html|htm|php)$">
    Header set Cache-Control "public, max-age=60, s-maxage=3600, stale-while-revalidate=86400"
  </FilesMatch>
</IfModule>

# 7. Error Handling (Optional: custom 404 handled by Next.js app)
ErrorDocument 404 /404.html
